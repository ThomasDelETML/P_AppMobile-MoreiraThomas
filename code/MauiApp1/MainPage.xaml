                Visual="Default"
                FontFamily="Jersey20"
                FontSize="20"
                Placeholder="Recherchez..."
                TextColor="Black" 
                HorizontalOptions="Center"
                WidthRequest="200"
                HeightRequest="50"   
                
                    />
