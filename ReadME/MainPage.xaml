<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReadME.MainPage">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="White">
            <HorizontalStackLayout
                Padding="30,0"
                Margin="0,60,0,0"
                Spacing="25"
                HorizontalOptions="Center"
                VerticalOptions="Start">
                <Button
                x:Name="ReadMe"
                Text="ReadMe" 
                SemanticProperties.Hint="Logo"
                HorizontalOptions="Start"
                Background="#194FC2"
                FontFamily="Jersey20"
                WidthRequest="120"
                HeightRequest="50"
                CornerRadius="3"
                FontSize="20"
                TextColor="White"/>
                <Frame BorderColor="#194FC2" Padding="3" HasShadow="False" CornerRadius="3" BackgroundColor="#194FC2" HeightRequest="50">
                    <Frame BorderColor="#194FC2" Padding="0" HasShadow="False" CornerRadius="1">
                        <Entry 
                            Visual="Default"
                            FontFamily="Jersey20"
                            FontSize="20"
                            Placeholder="Recherchez..."
                            TextColor="Black" 
                            BackgroundColor="White"
                            HorizontalOptions="Center"
                            WidthRequest="200"
                            HeightRequest="50"   
                        />
                    </Frame>
                </Frame>
            </HorizontalStackLayout>
            <StackLayout Orientation="Vertical" Spacing="20" Margin="30" VerticalOptions="Center">
                <Label Text="{Binding ResultMessage}"
                       TextColor="#194FC2"
                       FontAttributes="Bold"
                       FontSize="18"
                       FontFamily="Jersey20"
                       HorizontalOptions="Center" />
                <CollectionView x:Name="BooksCollection"
                                ItemsSource="{Binding Livres}"
                                SelectionMode="Single"
                                Margin="0,10"
                                ItemsLayout="VerticalGrid, 2"
                                SelectionChanged="OnSelectionChanged">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Padding="5" HorizontalOptions="Center">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="transparent" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="#194FC2" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Image Source="{Binding ImageSource}"
                                   HeightRequest="200"
                                   WidthRequest="130"
                                   Aspect="AspectFill" />
                                            <Label Text="{Binding Titre}"
                                   TextColor="Black"
                                   FontSize="14"
                                   FontFamily="Jersey20"
                                   HorizontalTextAlignment="Center"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2" />      
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>